- if homepage.present?
  .navbar.navbar-default{role: 'navigation'}
    .container
      .navbar-header
        %button.navbar-toggle{type: 'button', data: { toggle: 'collapse', target: '.navbar-collapse' }}
          %span.sr-only
            Toggle navigation

          %span.icon-bar
          %span.icon-bar
          %span.icon-bar

        = link_to(cms_path(homepage), class: 'navbar-brand') do
          = display_field(homepage, :headline)

      .navbar-collapse.collapse
        = cms_tag_list(:ul, homepage, :toclist, class: 'nav navbar-nav', id: 'main_nav') do |list, obj|
          - list.tag(:li, id: "main_nav_page_#{obj.id}", data: { path: obj.path }) do
            = link_to(cms_path(obj)) do
              = display_field(obj, :headline)
